<h1>Companies</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= link_to company.name, company %></td>
        <td>
          <% @areas.each do |area| %>
            <%= area.name %> | 
            <% count = 0 %>
            <% @employees.each do |employee| %>
              <% if employee.area_id == area.id && employee.company_id == company.id %>
                <% count += 1 %>
              <% end %>   
            <% end %>
            Cantidad de empleados: <%= count %><br>
          <% end %>

        </td>
        <td><%= link_to 'Edit', edit_company_path(company), :class => "btn btn-light" %></td>
        <td><%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-warning" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

